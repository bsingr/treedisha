begin
    require 'jeweler'
    Jeweler::Tasks.new do |gemspec|
        gemspec.name = "treedisha"
        gemspec.summary = "Tiny file tree comparison library"
        gemspec.description = "Tiny file tree comparison library using sha1-checksums"
        gemspec.email = "whiterabbit.init@gmail.com"
        gemspec.homepage = "http://github.com/dpree/treedisha"
        gemspec.authors = ["dpree"]
        gemspec.files = FileList['lib/**/*.rb']
    end
    Jeweler::GemcutterTasks.new
rescue LoadError
    puts "Jeweler not available. Install it with: sudo gem install technicalpickles-jeweler -s http://gems.github.com"
end